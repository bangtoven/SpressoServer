<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.name %></td>
    <td><%= menu.price %></td>
    <td><%= link_to 'Show', [menu.cafe, menu] %></td>
    <td><%= link_to 'Edit', edit_cafe_menu_path(menu.cafe, menu) %></td>
    <td><%= link_to 'Destroy', [menu.cafe, menu], :confirm => 'Are you sure?', :method => :delete %></td>
